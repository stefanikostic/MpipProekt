<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.mpip.freeride">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>



    <application
            android:usesCleartextTraffic="true"
            android:name=".App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
        tools:targetApi="m">

        <activity android:name=".ClientBikeActivity"
            tools:ignore="Instantiatable">
        </activity>
        <activity android:name=".RenterRegisterActivity"
            tools:ignore="Instantiatable">
        </activity>
        <activity android:name=".RenterMapsActivity"
            tools:ignore="Instantiatable">
        </activity>
        <activity
                android:name=".AddBicycleActivity"
                android:label="@string/title_activity_add_bicycle"
                android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="Instantiatable">
        </activity>
        <activity
                android:name=".RenterMainActivity"
                android:label="@string/title_activity_renter_main"
                android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="Instantiatable">
        </activity>
        <activity
                android:name=".ClientMainActivity"
                android:label="ClientMainActivity"
                android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="Instantiatable">
        </activity>

        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="@string/map_key"/>

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".OfferActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ClientRegisterActivity"
            tools:ignore="Instantiatable">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.parse.SERVER_URL"
            android:value="@string/back4app_server_url" />
        <meta-data
            android:name="com.parse.APPLICATION_ID"
            android:value="@string/back4app_app_id" />
        <meta-data
            android:name="com.parse.CLIENT_KEY"
            android:value="@string/back4app_client_key" />

        <service android:name=".service.LocationService"
                 android:enabled="true"
                 android:exported="true"/>
    </application>

</manifest>
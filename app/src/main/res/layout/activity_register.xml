<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".RegisterActivity"
            android:background="@drawable/pozz">

        <EditText
                android:id="@+id/reg_email"
                android:layout_width="281dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:paddingLeft="20dp"
                android:background="@drawable/darkbackwithborder"
                android:hint="E-mail"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="sans-serif-medium"/>

        <EditText
                android:id="@+id/reg_pass"
                android:layout_width="281dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:paddingLeft="20dp"
                android:ems="10"
                android:background="@drawable/darkbackwithborder"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reg_email"
                android:fontFamily="sans-serif-medium"/>

        <EditText
                android:id="@+id/reg_confirm"
                android:layout_width="281dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:paddingLeft="20dp"
                android:background="@drawable/darkbackwithborder"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reg_pass"
                android:fontFamily="sans-serif-medium"/>


        <androidx.appcompat.widget.Toolbar
                android:layout_width="500dp"
                android:layout_height="85dp"
                android:theme="?attr/actionBarTheme"
                android:minHeight="?attr/actionBarSize"
                android:id="@+id/toolbar2" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/reg_confirm"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.504">
            <Button
                    android:id="@+id/signup"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorPrimary"
                    android:text="Register as renter"
                    android:textAllCaps="true"
                    android:layout_marginEnd="5dp"
                    android:scaleType="center"
                    android:textAlignment="center"
                    android:textColor="#ffffff" android:layout_width="180dp"
                    android:layout_height="match_parent"/>
            <Button
                    android:id="@+id/signup2"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorPrimary"
                    android:minWidth="0dp"
                    android:text="Register as client"
                    android:textAllCaps="true"
                    android:scaleType="center"
                    android:textAlignment="center"
                    android:textColor="#ffffff" android:layout_width="180dp"
                    android:layout_height="match_parent"/>
        </androidx.appcompat.widget.Toolbar>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
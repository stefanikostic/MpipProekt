<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ClientBikeActivity">


    <ImageView
            android:layout_width="281dp"
            android:layout_height="193dp" app:srcCompat="@android:color/background_dark"
            android:id="@+id/imageViewBike"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="TextView"
            android:layout_width="171dp"
            android:layout_height="41dp"
            android:id="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    />
    <android.support.constraint.ConstraintLayout
            android:layout_width="393dp"
            android:layout_height="176dp"
            android:id="@+id/constraint1"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/imageViewBike"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.075" android:layout_marginStart="8dp">
        <Button
                android:text="RENT IT HOURLY"
                android:layout_width="168dp"
                android:layout_height="47dp" android:id="@+id/rentHourly"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="8dp"
                android:textColor="#ffffff"
                android:background="@drawable/primarydarkwithborder"
                android:textColorHint="#ffffff"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintVertical_bias="0.0"
                android:layout_marginStart="16dp"/>
        <Button
                android:text="RENT FOR A FEW DAYS"
                android:layout_width="176dp"
                android:background="@drawable/primarydarkwithborder"
                android:layout_height="46dp" android:id="@+id/rentDaily"
                android:textColorHint="#ffffff"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/rentHourly" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.529"
                android:textColor="#ffffff"
                app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginTop="8dp"/>
        <TextView
                android:text="What are your plans?"
                android:layout_width="296dp"
                android:paddingStart="24dp"
                android:textColor="#000000"
                android:textSize="26sp"
                android:textAlignment="center"
                android:layout_height="51dp" android:id="@+id/textView5" android:layout_marginEnd="84dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="408dp"
            android:layout_height="205dp"
            android:id="@+id/chooseDateTime"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageViewBike"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.046">
        <TextView
                android:background="@drawable/transbackwithborder"
                android:layout_width="142dp"
                android:layout_height="68dp"
                android:text="@string/pick_date"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:id="@+id/pickDate"
                android:padding="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"/>
        <TextView
                android:background="@drawable/transbackwithborder"
                android:layout_width="142dp"
                android:layout_height="68dp"
                android:text="@string/pick_date_to"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:visibility="invisible"
                android:textAlignment="center"
                android:gravity="center"
                android:id="@+id/pickDateTo"
                android:padding="@dimen/activity_horizontal_margin" android:layout_marginEnd="28dp"
                app:layout_constraintEnd_toEndOf="parent"

                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pickDate" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.791"/>
        <TextView
                android:background="@drawable/transbackwithborder"
                android:layout_width="142dp"
                android:layout_height="47dp"
                android:text="@string/pick_time_from"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"
                android:id="@+id/pickTimeFrom"
                android:padding="@dimen/activity_horizontal_margin" android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/pickDate"/>


        <TextView
                android:background="@drawable/transbackwithborder"
                android:layout_width="142dp"
                android:layout_height="47dp"
                android:text="@string/pick_time_to"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:id="@+id/pickTimeTo"
                android:padding="@dimen/activity_horizontal_margin"
                app:layout_constraintStart_toEndOf="@+id/pickTimeFrom"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/pickDate"/>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
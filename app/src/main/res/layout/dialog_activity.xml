<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DialogActivity">

    <TextView
        android:text="Choose the bicycle category:"
        android:layout_width="354dp"
        android:layout_height="50dp"
        android:id="@+id/textView10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/gridview_renter"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="20dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginEnd="8dp"
        android:lineSpacingExtra="8sp"
        android:typeface="sans"
        android:autoText="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorText"
        android:text="BMX/Trick Bike" />

    <Button
        android:id="@+id/button3"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/button"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorText"
        android:text="Beach Cruiser" />

    <Button
        android:id="@+id/button4"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorText"
        android:text="Commuting Bike" />

    <Button
        android:id="@+id/button5"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorText"
        android:text="Road Bike" />

    <Button
        android:id="@+id/button6"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/button5"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorText"
        android:text="Hybrid/Comfort Bike" />

    <Button
        android:id="@+id/button7"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/button6"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorText"
        android:text="Mountain Bikes" />


</RelativeLayout>